<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="7dip">
  
	<TableLayout android:id="@+id/row1"
	    android:layout_width="fill_parent"
	    android:layout_weight="1" android:layout_height="fill_parent">
	    <TableRow
        android:layout_weight="1" android:layout_gravity="center_vertical">
      		<Button android:id="@+id/opp"
	          	android:layout_width="0dip"
          		android:layout_height="fill_parent"
          		android:text="("
          		android:layout_weight="1" android:layout_gravity="center_vertical|center_horizontal" android:textSize="22dip"/>
      		<Button android:id="@+id/clp"
	          	android:layout_width="0dip"
          		android:layout_height="fill_parent"
          		android:text=")"
          		android:layout_weight="1" android:layout_gravity="center_vertical|center_horizontal" android:textSize="22dip"/>
      		<!--
      		<Button android:id="@+id/sqrt"
	          	android:layout_width="0dip"
          		android:layout_height="fill_parent"
          		android:text="√"
          		android:layout_weight="1" android:layout_gravity="center_vertical|center_horizontal" android:textSize="25dip"/>
      		-->
      		<Button android:layout_width="0dip"
	          	android:layout_height="fill_parent"
          		android:layout_weight="1" 
          		android:text="CE" 
          		android:id="@+id/clear" android:textSize="22dip"/>
          	<Button android:layout_width="0dip"
          		android:layout_height="fill_parent"
          		android:layout_weight="1" 
          		android:text="+" 
          		android:id="@+id/plus" 
          		android:layout_gravity="center_vertical|center_horizontal" android:textSize="22dip"/>
    	</TableRow>
        <TableRow
        	android:layout_weight="1" android:layout_gravity="center_vertical">
      		<Button android:id="@+id/n7"
          	android:layout_width="0dip"
          	android:layout_height="fill_parent"
          	android:text="7"
          	android:layout_weight="1" android:layout_gravity="center_vertical|center_horizontal" android:textSize="22dip"/>
      	<Button android:id="@+id/n8"
          	android:layout_width="0dip"
          	android:layout_height="fill_parent"
          	android:text="8"
          	android:layout_weight="1" android:layout_gravity="center_vertical|center_horizontal" android:textSize="22dip"/>
      	<Button android:id="@+id/n9"
          	android:layout_width="0dip"
          	android:layout_height="fill_parent"
          	android:text="9"
          	android:layout_weight="1" android:layout_gravity="center_vertical|center_horizontal" android:textSize="22dip"/>
      	<Button android:id="@+id/minus"
         	android:layout_width="0dip"
          	android:layout_height="fill_parent"
          	android:text="-"
          	android:layout_weight="1" 
          	android:layout_gravity="center_vertical|center_horizontal" android:textSize="22dip"/>
    </TableRow>
    
    <TableRow
        android:layout_weight="1">
      <Button android:id="@+id/n4"
          android:layout_width="0dip"
          android:layout_height="fill_parent"
          android:text="4"
          android:layout_weight="1" android:layout_gravity="center_vertical|center_horizontal" android:textSize="22dip"/>
      <Button android:id="@+id/n5"
          android:layout_width="0dip"
          android:layout_height="fill_parent"
          android:text="5"
          android:layout_weight="1" android:layout_gravity="center_vertical|center_horizontal" android:textSize="22dip"/>
      <Button android:id="@+id/n6"
          android:layout_width="0dip"
          android:layout_height="fill_parent"
          android:text="6"
          android:layout_weight="1" android:layout_gravity="center_vertical|center_horizontal" android:textSize="22dip"/>
      <Button android:layout_width="0dip"
          android:layout_height="fill_parent"
          android:layout_weight="1" 
          android:text="×" 
          android:id="@+id/mul" 
          android:layout_gravity="center_vertical|center_horizontal" android:textSize="22dip"/>
    </TableRow>
    
    <TableRow
        android:layout_weight="1">
      <Button android:id="@+id/n1"
          android:layout_width="0dip"
          android:layout_height="fill_parent"
          android:text="1"
          android:layout_weight="1" android:layout_gravity="center_vertical|center_horizontal" android:textSize="22dip"/>
      <Button android:id="@+id/n2"
          android:layout_width="0dip"
          android:layout_height="fill_parent"
          android:text="2"
          android:layout_weight="1" android:layout_gravity="center_vertical|center_horizontal" android:textSize="22dip"/>
      <Button android:id="@+id/n3"
          android:layout_width="0dip"
          android:layout_height="fill_parent"
          android:text="3"
          android:layout_weight="1" android:layout_gravity="center_vertical|center_horizontal" android:textSize="22dip"/>
      <Button android:layout_width="0dip"
          android:layout_height="fill_parent"
          android:layout_weight="1" 
          android:text="÷" 
          android:id="@+id/div" 
          android:layout_gravity="center_vertical|center_horizontal" android:textSize="22dip"/>
    </TableRow>
    
    <TableRow
        android:layout_weight="1">
      <Button android:id="@+id/point"
          android:layout_width="0dip"
          android:layout_height="fill_parent"
          android:text="."
          android:layout_weight="1" android:textSize="22dip"/>
      <Button android:id="@+id/n0"
          android:layout_width="0dip"
          android:layout_height="fill_parent"
          android:text="0"
          android:layout_weight="1" android:textSize="22dip"/>
      <ImageButton android:id="@+id/back"
          android:src="@drawable/delete"
          android:layout_width="0dip"
          android:layout_height="fill_parent"
          android:layout_weight="1" android:layout_gravity="center_vertical|center_horizontal"/>
      <Button android:layout_width="0dip"
          android:layout_height="fill_parent"
          android:layout_weight="1" 
          android:text="=" 
          android:id="@+id/equal" 
          android:layout_gravity="center_vertical|center_horizontal" android:textSize="22dip"/>
    </TableRow>
  </TableLayout>
</RelativeLayout>
