<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="horizontal">
  	 
  	<LinearLayout android:orientation="vertical" 
  		android:layout_width="wrap_content" android:layout_height="wrap_content" 
  		android:layout_weight="8"> 
  		<TextView android:id="@+id/widgetcreditcard_name" android:text="cardname"
  			android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#000000"></TextView>
  			<LinearLayout android:orientation="horizontal"
  				android:layout_width="wrap_content" android:layout_height="wrap_content">
  				<TextView android:layout_width="wrap_content"
  					android:layout_height="wrap_content" android:text="Payment day:"
  					android:textColor="#000000"></TextView>
  				<TextView android:id="@+id/widgetcreditcard_paymentday" android:layout_width="wrap_content"
  					android:layout_height="wrap_content" android:text="paymentday"
  					android:textColor="#000000"></TextView>
  					
  				<TextView android:layout_width="wrap_content"
  					android:layout_height="wrap_content" android:text="Close day:"
  					android:layout_marginLeft="5px" android:textColor="#000000"></TextView>	
				<TextView android:id="@+id/widgetcreditcard_closeday" android:layout_width="wrap_content"
  					android:layout_height="wrap_content"
  					android:text="closeday" android:textColor="#000000"></TextView>
  		</LinearLayout>
  	</LinearLayout>
	<Button android:id="@+id/widgetcreditcard_btnDelete" android:text="Delete" 
		android:layout_width="wrap_content" android:layout_height="wrap_content" 
  		>
	</Button>
	
</LinearLayout>
